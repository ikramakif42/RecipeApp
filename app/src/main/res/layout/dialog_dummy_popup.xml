<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#AA000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dummy Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fillViewport="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView android:text="Name" android:padding="8dp"/>
                    <TextView android:text="Type" android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="Eggs" android:padding="8dp"/>
                    <TextView android:text="Ingredient" android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="Omelette" android:padding="8dp"/>
                    <TextView android:text="Recipe" android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="Lunch" android:padding="8dp"/>
                    <TextView android:text="Preset" android:padding="8dp"/>
                </TableRow>

            </TableLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</RelativeLayout>
